{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "stopWox",
                "build debug",
                "startWox"
            ]
        },
        {
            "label": "build debug",
            "command": "dotnet build",
            "type": "shell",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build release",
            "command": "dotnet build --configuration Release",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "dotnet clean",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "refreshWox",
            "command": "${env:LOCALAPPDATA}/Wox/Wox.exe",
            "args": [
                "reloadplugin"
            ],
            "type": "shell",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "startWox",
            "command": "${env:LOCALAPPDATA}/Wox/Wox.exe",
            "type": "shell",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "stopWox",
            "command": "taskkill /IM Wox.exe",
            "type": "shell",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "source": "Task was killed",
                "pattern": {
                    "regexp": "^SUCCESS.*"
                }
            }
        }
    ]
}